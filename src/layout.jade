doctype html
html
  head
    title Bertram Home Inspections
    meta(charset='utf-8')
    meta(property="og:title" content="Arcana by HTML5 UP")
    meta(name='viewport', content='width=device-width, initial-scale=1')
    //if lte IE 8
      script(src='assets/js/ie/html5shiv.js')
    link(rel='stylesheet', href='assets/css/main.css')
    //if lte IE 8
      link(rel='stylesheet', href='assets/css/ie8.css')
    //if lte IE 9
      link(rel='stylesheet', href='assets/css/ie9.css')
  body
    #page-wrapper
      #header
        .logo
          img(src='/images/logo.jpg', style='height: 200px')
          #logo Bertram Home Inspections
        include nav
      block content
      // Footer
      #footer
        .container
          .row
            section.3u(class='6u(narrower) 12u$(mobilep)')
              h3 Links to Stuff
              ul.links
                li
                  a(href='#') Mattis et quis rutrum
                li
                  a(href='#') Suspendisse amet varius
                li
                  a(href='#') Sed et dapibus quis
                li
                  a(href='#') Rutrum accumsan dolor
                li
                  a(href='#') Mattis rutrum accumsan
                li
                  a(href='#') Suspendisse varius nibh
                li
                  a(href='#') Sed et dapibus mattis
            section.3u(class='6u$(narrower) 12u$(mobilep)')
              h3 More Links to Stuff
              ul.links
                li
                  a(href='#') Duis neque nisi dapibus
                li
                  a(href='#') Sed et dapibus quis
                li
                  a(href='#') Rutrum accumsan sed
                li
                  a(href='#') Mattis et sed accumsan
                li
                  a(href='#') Duis neque nisi sed
                li
                  a(href='#') Sed et dapibus quis
                li
                  a(href='#') Rutrum amet varius
            section.6u(class='12u(narrower)')
              h3 Get In Touch
              form
                .row(class='50%')
                  .6u(class='12u(mobilep)')
                    input#name(type='text', name='name', placeholder='Name')
                  .6u(class='12u(mobilep)')
                    input#email(type='email', name='email', placeholder='Email')
                .row(class='50%')
                  .12u
                    textarea#message(name='message', placeholder='Message', rows='5')
                .row(class='50%')
                  .12u
                    ul.actions
                      li
                        input.button.alt(type='submit', value='Send Message')
        // Icons
        ul.icons
          //- li
            a.icon.fa-twitter(href='#')
              span.label Twitter
          li
            a.icon.fa-facebook(target='_blank' href='https://www.facebook.com/bertramhomeinspections/')
              span.label Facebook
          li
            a.icon.fa-github(href='https://github.com/acoll/bertramhomeinspections' target='_blank')
              span.label GitHub
          //- li
            a.icon.fa-linkedin(href='#')
              span.label LinkedIn
          //- li
            a.icon.fa-google-plus(href='#')
              span.label Google+
